import string
import random

if __name__ == "__main__":
    case1 = string.ascii_lowercase

    case2 = string.ascii_uppercase

    case3 = string.digits

    case4 = string.punctuation

    length = int(input("Enter password length\n"))
    set = []
    set.extend(list(case1))
    set.extend(list(case2))
    set.extend(list(case3))
    set.extend(list(case4))

    print("Your password is: ")
    print("".join(random.sample(set, length)))



